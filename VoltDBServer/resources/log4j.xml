    </logger -->
    
    <!-- logger name="NETWORK">
        <level value="INFO"/> 
    </logger -->
    
    <!-- logger name="SQL">
        <level value="INFO"/> 
    </logger -->
    
    <!-- logger name="RECOVERY">
        <level value="INFO"/> 
    </logger -->
    
    <!-- logger name="COMPILER">
        <level value="INFO"/> 
    </logger -->
    
    <!-- logger name="ADHOCPLANNERTHREAD">
        <level value="INFO"/> 
    </logger -->
    
    <!-- logger name="EXPORT">
        <level value="INFO"/> 
    </logger -->
    
    <!-- logger name="DRAGENT">
        <level value="INFO"/> 
    </logger -->
    
    <!-- logger name="DRSTATS">
        <level value="INFO"/> 
    </logger -->
    
    <root>
        <priority value="info" />
        <appender-ref ref="console" />
        <appender-ref ref="file" />
    </root>
</log4j:configuration>
